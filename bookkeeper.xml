  </path>
  
  <property name="project.jdk.home" value="${jdk.home.10}"/>
  <property name="project.jdk.bin" value="${jdk.bin.10}"/>
  <property name="project.jdk.classpath" value="jdk.classpath.10"/>
  
  
  <!-- Project Libraries -->
  
  <path id="library.maven:_junit:junit:4.11.classpath">
    <pathelement location="${path.variable.maven_repository}/junit/junit/4.11/junit-4.11.jar"/>
  </path>
  
  <path id="library.maven:_org.hamcrest:hamcrest-core:1.3.classpath">
    <pathelement location="${path.variable.maven_repository}/org/hamcrest/hamcrest-core/1.3/hamcrest-core-1.3.jar"/>
  </path>
  <!-- Register Custom Compiler Taskdefs -->
  <property name="javac2.home" value="${idea.home}/lib"/>
  <path id="javac2.classpath">
    <fileset dir="${javac2.home}">
      <include name="javac2.jar"/>
      <include name="jdom.jar"/>
      <include name="asm-all*.jar"/>
      <include name="jgoodies-forms.jar"/>
    </fileset>
  </path>
  <target name="register.custom.compilers">
    <taskdef name="javac2" classname="com.intellij.ant.Javac2" classpathref="javac2.classpath"/>
    <taskdef name="instrumentIdeaExtensions" classname="com.intellij.ant.InstrumentIdeaExtensions" classpathref="javac2.classpath"/>
  </target>
  
  <!-- Modules -->
  
  
  <!-- Module bookkeeper -->
  
  <dirname property="module.bookkeeper.basedir" file="${ant.file}"/>
  
  
  <property name="module.jdk.home.bookkeeper" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.bookkeeper" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.bookkeeper" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.bookkeeper" value="-encoding UTF-8 -source 7 -target 1.7 ${compiler.args}"/>
  
  <property name="bookkeeper.output.dir" value="${module.bookkeeper.basedir}/target/classes"/>
  <property name="bookkeeper.testoutput.dir" value="${module.bookkeeper.basedir}/target/test-classes"/>
  
  <path id="bookkeeper.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="bookkeeper.module.production.classpath">
    <path refid="${module.jdk.classpath.bookkeeper}"/>
  </path>
  
  <path id="bookkeeper.runtime.production.module.classpath">
    <pathelement location="${bookkeeper.output.dir}"/>
  </path>
  
  <path id="bookkeeper.module.classpath">
    <path refid="${module.jdk.classpath.bookkeeper}"/>
    <pathelement location="${bookkeeper.output.dir}"/>
    <path refid="library.maven:_junit:junit:4.11.classpath"/>
    <path refid="library.maven:_org.hamcrest:hamcrest-core:1.3.classpath"/>
  </path>
  
  <path id="bookkeeper.runtime.module.classpath">
    <pathelement location="${bookkeeper.testoutput.dir}"/>
    <pathelement location="${bookkeeper.output.dir}"/>
    <path refid="library.maven:_junit:junit:4.11.classpath"/>
    <path refid="library.maven:_org.hamcrest:hamcrest-core:1.3.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.bookkeeper">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.bookkeeper">
    <patternset refid="excluded.from.module.bookkeeper"/>
  </patternset>
  
  
  <target name="compile.module.bookkeeper" depends="compile.module.bookkeeper.production,compile.module.bookkeeper.tests" description="Compile module bookkeeper"/>
  
  <target name="compile.module.bookkeeper.production" depends="register.custom.compilers" description="Compile module bookkeeper; production classes"/>
  
  <target name="compile.module.bookkeeper.tests" depends="register.custom.compilers,compile.module.bookkeeper.production" description="compile module bookkeeper; test classes" unless="skip.tests"/>
  
  <target name="clean.module.bookkeeper" description="cleanup module">
    <delete dir="${bookkeeper.output.dir}"/>
    <delete dir="${bookkeeper.testoutput.dir}"/>
  </target>
  
  <target name="init" description="Build initialization">
    <!-- Perform any build initialization in this target -->
  </target>
  
  <target name="clean" depends="clean.module.bookkeeper" description="cleanup all"/>
  
  <target name="build.modules" depends="init, clean, compile.module.bookkeeper" description="build all modules"/>
  
  <target name="all" depends="build.modules" description="build all"/>
</project>